<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Profile.RecipeForm">

    <TextView
        android:id="@+id/ques"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="What should we call your recipe?"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/black"
        android:textSize="25sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ViewFlipper
            android:id="@+id/simpleViewFlipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ans1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/buttonNext1"/>

                <Button
                    android:id="@+id/buttonNext1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="15dp"
                    android:layout_margin="50dp"
                    android:onClick="onClick"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/ans1"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ans2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/buttonNext2"/>

                <TextView
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="min"
                    app:layout_constraintBottom_toTopOf="@+id/buttonNext2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toEndOf="@+id/ans2"/>

                <Button
                    android:id="@+id/buttonNext2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="15dp"
                    android:layout_margin="50dp"
                    android:onClick="onClick"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/ans2"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ans3"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/buttonNext3"/>

                <TextView
                    android:id="@+id/spinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/buttonNext3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toEndOf="@+id/ans3"/>

                <Button
                    android:id="@+id/buttonNext3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="15dp"
                    android:layout_margin="50dp"
                    android:onClick="onClick"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/ans3"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="40dp">

                <EditText
                    android:id="@+id/ing1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@+id/number1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/ing2"/>

                <TextView
                    android:id="@+id/number1"
                    android:text="1"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/ing1"
                    app:layout_constraintBottom_toBottomOf="@+id/ing1"
                    app:layout_constraintEnd_toStartOf="@+id/ing1"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/ing2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@+id/number2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ing1"
                    app:layout_constraintBottom_toTopOf="@+id/ing3"/>

                <TextView
                    android:id="@+id/number2"
                    android:text="2"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/ing2"
                    app:layout_constraintBottom_toBottomOf="@+id/ing2"
                    app:layout_constraintEnd_toStartOf="@+id/ing2"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/ing3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@+id/number3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ing2"
                    app:layout_constraintBottom_toTopOf="@+id/ing4"/>

                <TextView
                    android:id="@+id/number3"
                    android:text="3"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/ing3"
                    app:layout_constraintBottom_toBottomOf="@+id/ing3"
                    app:layout_constraintEnd_toStartOf="@+id/ing3"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/ing4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@+id/number4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ing3"
                    app:layout_constraintBottom_toTopOf="@+id/ing5"/>

                <TextView
                    android:id="@+id/number4"
                    android:text="4"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/ing4"
                    app:layout_constraintBottom_toBottomOf="@+id/ing4"
                    app:layout_constraintEnd_toStartOf="@+id/ing4"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/ing5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    app:layout_constraintStart_toEndOf="@+id/number5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ing4"
                    app:layout_constraintBottom_toTopOf="@+id/buttonNext4"/>

                <TextView
                    android:id="@+id/number5"
                    android:text="5"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/ing5"
                    app:layout_constraintBottom_toBottomOf="@+id/ing5"
                    app:layout_constraintEnd_toStartOf="@+id/ing5"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="parent"/>

                <Button
                    android:id="@+id/buttonNext4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="15dp"
                    android:layout_marginTop="50dp"
                    android:onClick="onClick"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/buttonMore"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ing5"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <Button
                    android:id="@+id/buttonMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="15dp"
                    android:layout_marginTop="50dp"
                    android:onClick="onClick"
                    android:text="ADD MORE INGREDIENTS"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/buttonNext4"
                    app:layout_constraintTop_toBottomOf="@+id/ing5"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="40dp">

                <EditText
                    android:id="@+id/inst1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@+id/number_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/inst2"/>

                <TextView
                    android:id="@+id/number_1"
                    android:text="1"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/inst1"
                    app:layout_constraintBottom_toBottomOf="@+id/inst1"
                    app:layout_constraintEnd_toStartOf="@+id/inst1"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/inst2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@+id/number_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inst1"
                    app:layout_constraintBottom_toTopOf="@+id/inst3"/>

                <TextView
                    android:id="@+id/number_2"
                    android:text="2"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/inst2"
                    app:layout_constraintBottom_toBottomOf="@+id/inst2"
                    app:layout_constraintEnd_toStartOf="@+id/inst2"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/inst3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@+id/number_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inst2"
                    app:layout_constraintBottom_toTopOf="@+id/inst4"/>

                <TextView
                    android:id="@+id/number_3"
                    android:text="3"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/inst3"
                    app:layout_constraintBottom_toBottomOf="@+id/inst3"
                    app:layout_constraintEnd_toStartOf="@+id/inst3"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/inst4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@+id/number_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inst3"
                    app:layout_constraintBottom_toTopOf="@+id/inst5"/>

                <TextView
                    android:id="@+id/number_4"
                    android:text="4"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/inst4"
                    app:layout_constraintBottom_toBottomOf="@+id/inst4"
                    app:layout_constraintEnd_toStartOf="@+id/inst4"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/inst5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    app:layout_constraintStart_toEndOf="@+id/number_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inst4"
                    app:layout_constraintBottom_toTopOf="@+id/buttonNext5"/>

                <TextView
                    android:id="@+id/number_5"
                    android:text="5"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/inst5"
                    app:layout_constraintBottom_toBottomOf="@+id/inst5"
                    app:layout_constraintEnd_toStartOf="@+id/inst5"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="parent"/>

                <Button
                    android:id="@+id/buttonNext5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="15dp"
                    android:layout_marginTop="50dp"
                    android:onClick="onClick"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/buttonMore2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inst5"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <Button
                    android:id="@+id/buttonMore2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="15dp"
                    android:layout_marginTop="50dp"
                    android:onClick="onClick"
                    android:text="ADD MORE INSTRUCTIONS"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/buttonNext5"
                    app:layout_constraintTop_toBottomOf="@+id/inst5"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/tag"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#fff"
                    android:button="@null"
                    android:onClick="isChecked"
                    android:text="@string/vegan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tag2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <CheckBox
                    android:id="@+id/tag2"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#fff"
                    android:button="@null"
                    android:onClick="isChecked"
                    android:text="@string/vegetarian"
                    app:layout_constraintTop_toBottomOf="@+id/tag"
                    app:layout_constraintBottom_toTopOf="@+id/tag3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <CheckBox
                    android:id="@+id/tag3"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#fff"
                    android:button="@null"
                    android:onClick="isChecked"
                    android:text="@string/glutenfree"
                    app:layout_constraintTop_toBottomOf="@+id/tag2"
                    app:layout_constraintBottom_toTopOf="@+id/tag4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <CheckBox
                    android:id="@+id/tag4"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#fff"
                    android:button="@null"
                    android:onClick="isChecked"
                    android:text="@string/dairyfree"
                    app:layout_constraintTop_toBottomOf="@+id/tag3"
                    app:layout_constraintBottom_toTopOf="@+id/tag5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <CheckBox
                    android:id="@+id/tag5"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#fff"
                    android:button="@null"
                    android:onClick="isChecked"
                    android:text="@string/naturalsweet"
                    app:layout_constraintTop_toBottomOf="@+id/tag4"
                    app:layout_constraintBottom_toTopOf="@+id/buttonNext6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <Button
                    android:id="@+id/buttonNext6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:onClick="onClick"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tag5"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/select"
                    android:text="Select Image"
                    android:onClick="onClick"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/image_name"
                    app:layout_constraintBottom_toTopOf="@+id/buttonNext7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/image"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/image_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_name"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image"
                    app:layout_constraintBottom_toTopOf="@+id/select"/>

                <Button
                    android:id="@+id/buttonNext7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="15dp"
                    android:layout_marginTop="20dp"
                    android:onClick="onClick"
                    android:text="SAVE RECIPE"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/select"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ViewFlipper>

    </ScrollView>

</LinearLayout>