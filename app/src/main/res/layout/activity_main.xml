<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/constraintLayout2"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="Home"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_breakfast"
                android:scaleType="centerCrop"
                android:id="@+id/btn_breakfast_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/btn_lunch_bg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/btn_breakfast"
                android:text="Breakfast"
                android:textAlignment="center"
                android:gravity="center"
                android:onClick="onSelect"
                android:textSize="40dp"
                android:padding="10dp"
                android:background="@color/red"
                android:textColor="#fff"
                android:textFontWeight="900"
                android:fontFamily="@font/lato"
                app:layout_constraintBottom_toBottomOf="@+id/btn_breakfast_bg"
                app:layout_constraintTop_toTopOf="@+id/btn_breakfast_bg"
                app:layout_constraintStart_toStartOf="@+id/btn_breakfast_bg"
                app:layout_constraintEnd_toEndOf="@+id/btn_breakfast_bg"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_lunch"
                android:scaleType="centerCrop"
                android:id="@+id/btn_lunch_bg"
                app:layout_constraintTop_toBottomOf="@+id/btn_breakfast_bg"
                app:layout_constraintBottom_toTopOf="@+id/btn_snacks_bg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/btn_lunch"
                android:textAlignment="center"
                android:gravity="center"
                android:text="Lunch"
                android:padding="10dp"
                android:textSize="40dp"
                android:textColor="#fff"
                android:onClick="onSelect"
                android:textFontWeight="900"
                android:background="@color/black"
                android:fontFamily="@font/lato"
                app:layout_constraintBottom_toBottomOf="@+id/btn_lunch_bg"
                app:layout_constraintTop_toTopOf="@+id/btn_lunch_bg"
                app:layout_constraintStart_toStartOf="@+id/btn_lunch_bg"
                app:layout_constraintEnd_toEndOf="@+id/btn_lunch_bg"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_snacks"
                android:scaleType="centerCrop"
                android:id="@+id/btn_snacks_bg"
                app:layout_constraintTop_toBottomOf="@+id/btn_lunch_bg"
                app:layout_constraintBottom_toTopOf="@+id/btn_dinner_bg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/btn_snacks"
                android:text="Snacks"
                android:textAlignment="center"
                android:gravity="center"
                android:onClick="onSelect"
                android:textSize="40dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:textFontWeight="900"
                android:background="@color/brown"
                android:fontFamily="@font/lato"
                app:layout_constraintBottom_toBottomOf="@+id/btn_snacks_bg"
                app:layout_constraintTop_toTopOf="@+id/btn_snacks_bg"
                app:layout_constraintStart_toStartOf="@+id/btn_snacks_bg"
                app:layout_constraintEnd_toEndOf="@+id/btn_snacks_bg"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_dinner"
                android:scaleType="centerCrop"
                android:id="@+id/btn_dinner_bg"
                app:layout_constraintTop_toBottomOf="@+id/btn_snacks_bg"
                app:layout_constraintBottom_toTopOf="@+id/btn_all_bg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/btn_dinner"
                android:text="Dinner"
                android:textSize="40dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#fff"
                android:onClick="onSelect"
                android:padding="10dp"
                android:textFontWeight="900"
                android:fontFamily="@font/lato"
                android:background="@color/green"
                app:layout_constraintBottom_toBottomOf="@+id/btn_dinner_bg"
                app:layout_constraintTop_toTopOf="@+id/btn_dinner_bg"
                app:layout_constraintStart_toStartOf="@+id/btn_dinner_bg"
                app:layout_constraintEnd_toEndOf="@+id/btn_dinner_bg"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_all"
                android:scaleType="centerCrop"
                android:id="@+id/btn_all_bg"
                app:layout_constraintTop_toBottomOf="@+id/btn_dinner_bg"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/btn_all"
                android:text="Search All"
                android:textSize="40dp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:gravity="center"
                android:onClick="onSelect"
                android:textFontWeight="900"
                android:padding="10dp"
                android:background="@color/maroon"
                android:fontFamily="@font/lato"
                app:layout_constraintBottom_toBottomOf="@+id/btn_all_bg"
                app:layout_constraintTop_toTopOf="@+id/btn_all_bg"
                app:layout_constraintStart_toStartOf="@+id/btn_all_bg"
                app:layout_constraintEnd_toEndOf="@+id/btn_all_bg"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>